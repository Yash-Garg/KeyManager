<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="dev.yash.keymanager.ui.auth.AuthFragment"
        android:label="@string/app_name"
        tools:layout="@layout/auth_fragment">
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.yash.keymanager.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_sshDetailsFragment"
            app:destination="@id/sshDetailsFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_gpgDetailsFragment"
            app:destination="@id/gpgDetailsFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/gpgDetailsFragment"
        android:name="dev.yash.keymanager.ui.details.GpgDetailsFragment"
        android:label="gpg_details_fragment"
        tools:layout="@layout/gpg_details_fragment">
        <argument
            android:name="selectedGpgKey"
            app:argType="dev.yash.keymanager.models.GpgKey" />
    </fragment>
    <fragment
        android:id="@+id/sshDetailsFragment"
        android:name="dev.yash.keymanager.ui.details.SshDetailsFragment"
        android:label="ssh_details_fragment"
        tools:layout="@layout/ssh_details_fragment">
        <argument
            android:name="selectedSshKey"
            app:argType="dev.yash.keymanager.models.SshKey" />
    </fragment>
</navigation>
